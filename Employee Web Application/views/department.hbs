<div class="row">
    <div class="col-md-12">
        <h1>{{depts.departmentName}} - Department: {{ depts.departmentId}}</h2>
        <hr />
        <form method="post" action="/department/update">
            <input class="form-control" type="hidden" name="departmentId" id="depatmentId"
                value="{{depts.departmentId}}">
            <fieldset>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input class="form-control" id="departmentName" name="departmentName" type="text"
                                value="{{ depts.departmentName}}" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
        </form>
    </div>
</div>